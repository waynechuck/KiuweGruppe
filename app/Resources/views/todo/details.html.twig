{% extends 'backend.html.twig' %}

{% block body %}

    <div class="panel-heading">
        <h3 class="panel-title"><center>Todo bearbeiten</center></h3>
    </div>

    <div class="jumbotron">
        <a class="btn btn-primary" href="{{ path('ToDos_anzeigen') }}">zurück zur Übersicht</a>

        <h2 class="page-header"> Infos zu den Details</h2>

        <ul class="list-group">
            <li class="list-group-item"><strong> Datum: <br> </strong>{{ toDo.dueDate|date('F j, Y') }} </li>
            <li class="list-group-item"><strong> Kategorie: <br> </strong> {{ toDo.category }}</li>
            <li class="list-group-item"><strong> Priorität: <br> </strong> {{ toDo.priority }}</li>
            <li class="list-group-item"><strong> Name: <br> </strong> {{ toDo.name }}</li>
            <li class="list-group-item"><strong> Beschreibung: <br> </strong> {{ toDo.description }}</li>
        </ul>
    </div>

{% endblock %}