{% extends 'backend.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="panel-heading">
        <h3 class="panel-title"><center>Übersicht der aktuelle ToDo´s</center></h3>
    </div>

    <div class="panel-body">
        {% for ToDo in ToDo %}
            <div class="jumbotron">
        <a class="btn btn-primary" href="{{ path('ToDos_erstellen') }}">Todo´s hinzufügen</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID-Nummer</th>
                <th>Name des ToDo`s</th>
                <th>Deadline</th>
                <th>Bearbeitungsmöglichkeiten</th>
            </tr>
            </thead>
            <tbody>
                    <tr>
                        <th scope="row">{{ ToDo.id }}</th>
                        <td>{{ ToDo.name }}</td>
                        <td>{{ ToDo.dueDate|date('j F Y')}}</td>
                        <td>
                            {#@TODO keine hartgecodeten URLS verwenden#}
                            <a class='btn btn-success btn-xs' href="/dashboard/todos/details/{{ ToDo.id }}"><span class="glyphicon glyphicon-search"></span> Details</a>
                            {#@TODO keine hartgecodeten URLS verwenden#}
                            <a class='btn btn-info btn-xs' href="/dashboard/todos/bearbeiten/{{ ToDo.id }}"><span class="glyphicon glyphicon-edit"></span> Bearbeiten</a>
                            {#@TODO keine hartgecodeten URLS verwenden#}
                            <a href="/dashboard/todos/löschen/{{ ToDo.id }}" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Löschen</a>
                        </td>
                    </tr>
                </div>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
{% endblock %}
