{% extends 'backend.html.twig' %}

{% block body %}

    <div class="panel-heading">
        <div class="row">
            <div class="col-md-1">
                <a class='btn btn-primary btn-xs' href="{{ path('Dashboard') }}"><span class="glyphicon glyphicon-home"></span></a>
            </div>

            <div class="col-md-11">
                <div class="panel-title"><center> ToDo erstellen</center></div>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <a class="btn btn-default btn-block btn-sm" href="{{ path('ToDos_anzeigen') }}">zurück zur Übersicht!</a>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">

                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}

                    {{ form_label(form.category) }}
                    {{ form_errors(form.category) }}
                    {{ form_widget(form.category) }}

                    {{ form_label(form.priority) }}
                    {{ form_errors(form.priority) }}
                    {{ form_widget(form.priority) }}
                </div>

                <div class="col-md-6">
                    {{ form_label(form.description) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}

                    {{ form_label(form.dueDate) }}
                    {{ form_errors(form.dueDate) }}
                    {{ form_widget(form.dueDate) }}

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}