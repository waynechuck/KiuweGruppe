{% extends 'backend.html.twig' %}

{% block body %}

    <div class="panel-heading">
        <div class="row">
            <div class="col-md-12">
                <h3><center><strong> Neues Mitarbeiterprofil erstellen</strong></center></h3>
            </div>
        </div>
    </div>

    <hr>

    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <a class='btn btn-primary btn-block btn-md' href="{{ path('Mitarbeiter_anzeigen') }}"><span class="glyphicon glyphicon-arrow-left"></span> zurück zur Mitarbeiterübersicht!</a>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <h3> Persönliche Daten: </h3>
                <div class="col-md-4">

                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_label(form.vorname) }}
                    {{ form_errors(form.vorname) }}
                    {{ form_widget(form.vorname) }}

                    {{ form_label(form.nachname) }}
                    {{ form_errors(form.nachname) }}
                    {{ form_widget(form.nachname) }}

                    {{ form_label(form.strasse) }}
                    {{ form_errors(form.strasse) }}
                    {{ form_widget(form.strasse) }}

                    {{ form_label(form.hausnummer) }}
                    {{ form_errors(form.hausnummer) }}
                    {{ form_widget(form.hausnummer) }}
                </div>

                <div class="col-md-4">
                    {{ form_label(form.postleitzahl) }}
                    {{ form_errors(form.postleitzahl) }}
                    {{ form_widget(form.postleitzahl) }}

                    {{ form_label(form.ort) }}
                    {{ form_errors(form.ort) }}
                    {{ form_widget(form.ort) }}

                    {{ form_label(form.personalausweissnummer) }}
                    {{ form_errors(form.personalausweissnummer) }}
                    {{ form_widget(form.personalausweissnummer) }}

                    {{ form_label(form.familienstand) }}
                    {{ form_errors(form.familienstand) }}
                    {{ form_widget(form.familienstand) }}
                </div>

                <div class="col-md-4">
                    {{ form_label(form.geburtsdatum) }}
                    {{ form_errors(form.geburtsdatum) }}
                    {{ form_widget(form.geburtsdatum) }}

                    {{ form_label(form.geburtsort) }}
                    {{ form_errors(form.geburtsort) }}
                    {{ form_widget(form.geburtsort) }}

                    {{ form_label(form.telefon) }}
                    {{ form_errors(form.telefon) }}
                    {{ form_widget(form.telefon) }}

                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h3> Unternehmensrelevantedaten: </h3>
                <div class="col-md-4">
                    <div>
                        {{ form_label(form.abteilung) }}
                        {{ form_errors(form.abteilung) }}
                        {{ form_widget(form.abteilung) }}

                        {{ form_label(form.position) }}
                        {{ form_errors(form.position) }}
                        {{ form_widget(form.position) }}

                        {{ form_label(form.einstellungsdatum) }}
                        {{ form_errors(form.einstellungsdatum) }}
                        {{ form_widget(form.einstellungsdatum) }}

                        {{ form_label(form.steuerklasse) }}
                        {{ form_errors(form.steuerklasse) }}
                        {{ form_widget(form.steuerklasse) }}

                        {{ form_label(form.steueridentifiktationsnummer) }}
                        {{ form_errors(form.steueridentifiktationsnummer) }}
                        {{ form_widget(form.steueridentifiktationsnummer) }}

                        {{ form_label(form.arbeitszeugnis) }}
                        {{ form_errors(form.arbeitszeugnis) }}
                        {{ form_widget(form.arbeitszeugnis) }}
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        {{ form_label(form.bildungsabschluss) }}
                        {{ form_errors(form.bildungsabschluss) }}
                        {{ form_widget(form.bildungsabschluss) }}

                        {{ form_label(form.bruttoarbeitslohn) }}
                        {{ form_errors(form.bruttoarbeitslohn) }}
                        {{ form_widget(form.bruttoarbeitslohn) }}

                        {{ form_label(form.arbeitsstunden) }}
                        {{ form_errors(form.arbeitsstunden) }}
                        {{ form_widget(form.arbeitsstunden) }}

                        {{ form_label(form.krankenkasse) }}
                        {{ form_errors(form.krankenkasse) }}
                        {{ form_widget(form.krankenkasse) }}

                        {{ form_label(form.sozialversicherungsausweiss) }}
                        {{ form_errors(form.sozialversicherungsausweiss) }}
                        {{ form_widget(form.sozialversicherungsausweiss) }}

                        {{ form_label(form.bewerbung) }}
                        {{ form_errors(form.bewerbung) }}
                        {{ form_widget(form.bewerbung) }}
                    </div>
                </div>

                <div class="col-md-4">
                    <div>
                        {{ form_label(form.foto) }}
                        {{ form_errors(form.foto) }}
                        {{ form_widget(form.foto) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                        {{ form_widget(form.save) }}
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
