{% extends 'backend.html.twig' %}

{% block title %}Kiuwe gGmbH{% endblock %}

{% block body %}

    <div class="panel-heading" xmlns="http://www.w3.org/1999/html">
        <div class="row">
            <div class="col-md-12">
                <h3><center><strong> Kontaktformular-Anfragen für die Kiuwe Gruppe</strong></center></h3>
            </div>
        </div>
    </div>

    <hr>

    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">

            </div>

            <div class="col-md-4"></div>

            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Kontaktanfrage suchen...">
            </div>
        </div>

        <hr>

        {% for kontakt in kontakt %}
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-4">
                        <strong>Anrede </strong><br>
                        <strong>Vorname: </strong><br>
                        <strong>Nachname:</strong><br>
                        <strong>E-Mail-Adresse:</strong><br>
                    </div>

                    <div class="col-md-4">
                        {{ kontakt.anrede }} <br>
                        {{ kontakt.vorname }}<br>
                        {{ kontakt.nachname}} <br>
                        {{ kontakt.email}} <br>
                    </div>

                    <div class="col-md-4">
                        <strong><center>Bearbeitungsmöglichkeiten</center></strong>
                        <br>
                        <a class='btn btn-danger btn-block btn-xs' href="{{ path('Kontakt_löschen', { 'id' : kontakt.id }) }}"><span class="glyphicon glyphicon-edit"></span> Löschen</a>

                    </div>
                </div>

                <br>

                <div class="row">
                    <div class="col-md-12">
                        <strong>Betreff:</strong> <br>
                        {{ kontakt.betreff}} <br>

                        <br>

                        <strong> Beschreibung:<br> </strong>
                        <div style="text-align:justify;">
                            {{ kontakt.Nachricht }}
                        </div>
                    </div>
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>
{% endblock %}