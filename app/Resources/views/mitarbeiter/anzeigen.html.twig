{% extends 'backend.html.twig' %}

{% block body %}

    <div class="panel-heading">
        <div class="row">
            <div class="col-md-1">
                <a class='btn btn-primary btn-xs' href="{{ path('Dashboard') }}"><span class="glyphicon glyphicon-home"></span></a>
            </div>

            <div class="col-md-11">
                <div class="panel-title"><center> Hier ist die Übersicht von allen Mitarbeitern der Kiuwe gGmbH</center></div>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <a class='btn btn-primary btn-block btn-md' href="{{ path('Mitarbeiter_erstellen') }}"><span class="glyphicon glyphicon-pencil"></span> Mitarbeiterprofil anlegen</a>
            </div>

            <div class="col-md-4"></div>

            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Mitarbeiter suchen...">
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <div class="panel-title"><strong><center> Hier ist die Übersicht von allen Mitarbeitern der Kiuwe gGmbH</center></strong></div>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered ">
                    <thead>
                    <tr>
                        <th>Personalnummer</th>
                        <th>Vorname</th>
                        <th>Nachname</th>
                        <th>Position</th>
                        <th><center> Bearbeitungsmöglichkeiten</center></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for mitarbeiter in mitarbeiter %}
                        <tr>
                            <td> {{ mitarbeiter.id }} </td>
                            <td> {{ mitarbeiter.vorname }} </td>
                            <td> {{ mitarbeiter.nachname}} </td>
                            <td> {{ mitarbeiter.position}} </td>
                            <td>
                                <center>
                                <a class='btn btn-success btn-xs' href="{{ path('Mitarbeiter_details', { 'id' : mitarbeiter.id }) }}"><span class="glyphicon glyphicon-search"></span> Details</a>
                                <a class='btn btn-info btn-xs' href="{{ path('Mitarbeiter_bearbeiten', { 'id' : mitarbeiter.id }) }}"><span class="glyphicon glyphicon-edit"></span> Bearbeiten</a>
                                    <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#myModal">
                                        <span class="glyphicon glyphicon-remove"></span> Löschen</a>
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">Sind Sie sich sicher?</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div style="text-align:justify;">
                                                        Wollen Sie den Mitarbeiter wirklich löschen?
                                                        <br>
                                                        <br>
                                                        Mit einem Klick auf den Button "Mitarbeiter löschen" wird der Mitarbeiter unwiderruflich gelöscht.
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Schließen und Mitarbeiter nicht löschen</button>
                                                    <a href="{{ path('Mitarbeiter_löschen', { 'id' : mitarbeiter.id }) }}" class="btn btn-danger">Mitarbeiter löschen!</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </center>
                            </td>
                        </tr>
                    </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock %}
