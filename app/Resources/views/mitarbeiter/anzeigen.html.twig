{% extends 'backend.html.twig' %}

{% block body %}

    <div class="panel-heading">
            <a href="{{ path('Dashboard') }}" class="btn btn-default btn-xs">zurück</a>
    </div>

    <div class="jumbotron">
        <div class="row">
                <h1 class="panel-title"><center>Übersicht der Mitarbeiter</center></h1>
        </div>

        <hr>

        <div class="row">
            <!-- linke Spalte -->
            <div class="col-md-3">
                <a href="{{ path('Mitarbeiter_erstellen') }}" class="btn btn-primary">Mitarbeiterprofil anlegen</a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Personalnummer</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Telefon</th>
                <th>Position</th>
                <th>Bearbeitungsmöglichkeiten</th>
            </tr>
            </thead>
            <tbody>
            {% for mitarbeiter in mitarbeiter %}
                <tr>
                    <th scope="row"> {{ mitarbeiter.id }} </th>
                    <td> {{ mitarbeiter.vorname }} </td>
                    <td> {{ mitarbeiter.nachname}} </td>
                    <td> {{ mitarbeiter.telefon }} </td>
                    <td> {{ mitarbeiter.position}} </td>
                    <td>
                        <a href="{{ path('Mitarbeiter_details', { 'id' : mitarbeiter.id }) }}" class="btn btn-success">
                            Details
                        </a>
                        <a href="{{ path('Mitarbeiter_bearbeiten', { 'id' : mitarbeiter.id }) }}" class="btn btn-info">
                            Bearbeiten
                        </a>
                        <a href="{{ path('Mitarbeiter_löschen', { 'id' : mitarbeiter.id }) }}" class="btn btn-danger">
                            Löschen
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
